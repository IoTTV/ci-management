{
  "builders": [
    {
      "type": "docker",
      "image": "ubuntu:12.04",
      "commit": "true"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "only": ["docker"],
        "repository": "us.gcr.io/gce-iotivity-ci/iotivity-baseline",
        "tag": "0.1"
      },
      {
        "type": "docker-tag",
        "only": ["docker"],
        "force": "true",
        "repository": "us.gcr.io/gce-iotivity-ci/iotivity-baseline",
        "tag": "latest"
      },
      {
        "type": "docker-push",
        "only": ["docker"],
        "login": "true",
        "login_email": "1234@5678.com",
        "login_username": "_json_key",
        "login_password": "{{ user `docker_password` }}",
        "login_server": "us.gcr.io"
      }
    ]
  ],
  "provisioners": [
    {
      "type": "shell",
      "only": ["docker"],
      "scripts": [
        "scripts/baseline.sh",
        "scripts/jenkins-user.sh",
        "scripts/cleanup.sh"
      ]
    }
  ],
  "variables": {
    "docker_password": "{{ env `GCE_ACCOUNT_JSON` }}"
  }
}
